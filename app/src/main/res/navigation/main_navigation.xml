<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mysubmission11.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.mysubmission11.ui.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="nama"
            app:argType="string"
            android:defaultValue="default nama" />
        <argument
            android:name="gambar"
            app:argType="string"
            android:defaultValue="default gambar" />
    </fragment>
    <fragment
        android:id="@+id/followersFragment"
        android:name="com.example.mysubmission11.FollowersFragment"
        android:label="fragment_followers"
        tools:layout="@layout/fragment_followers" >
        <argument
            android:name="nama"
            app:argType="string"
            android:defaultValue="default nam" />
    </fragment>
    <fragment
        android:id="@+id/followingFragment"
        android:name="com.example.mysubmission11.FollowingFragment"
        android:label="fragment_following"
        tools:layout="@layout/fragment_following" >
        <argument
            android:name="nama"
            app:argType="string"
            android:defaultValue="default nama" />
    </fragment>
</navigation>